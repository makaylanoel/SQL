    Values ("Josh","Ostler","Eden");

CREATE TABLE hobbies (id INTEGER PRIMARY KEY,
    first_name TEXT,
    last_name TEXT,
    hobby TEXT);

Insert into hobbies (first_name,last_name, hobby)
